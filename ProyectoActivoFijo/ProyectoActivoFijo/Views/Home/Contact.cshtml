@{
    ViewData["Proyecto ingenieria en software"] = "Home Page";
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Fondo azul con degradado */
        body {
            background: linear-gradient(135deg, #0056b3, #003366);
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .texto-blanco-negrita {
            color: white; /* Texto en blanco */
            font-weight: bold; /* Negrita */
        }
    </style>
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="container bg-white p-5 rounded shadow-lg" style="max-width: 800px; width: 90%;">
        <h2 class="text-center mb-4">Contacto</h2>
        <form action="#" method="POST">
            <div class="mb-3">
                <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control" name="email" placeholder="Correo Electrónico" required>
            </div>
            <div class="mb-3">
                <textarea class="form-control" name="mensaje" rows="8" placeholder="Escribe tu mensaje" required></textarea>
            </div>
            <button type="submit" class="btn btn-success w-100">Enviar</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


