    ViewData["Proyecto ingenieria en software"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Fondo azul con degradado */
        body {
            background: linear-gradient(135deg, #0056b3, #003366);
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .texto-blanco-negrita {
            color: white; /* Texto en blanco */
            font-weight: bold; /* Negrita */
        }
    </style>
</head>
<body class="bg-light">

    <header>
        <h1>Administración de Activos Fijos</h1>
        <nav>
            <ul>
                <li><a href="index.html">Inicio</a></li>
                <li><a asp-controller="Home" asp-action="About" class="active">Sobre Nosotros</a></li>
                <li><a href="contact.html">Contacto</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="about">
            <h2>Sobre Nosotros</h2>
            <p>Bienvenido a nuestro sistema de administración de activos fijos. Nuestro objetivo es ofrecer una plataforma eficiente y fácil de usar para gestionar y rastrear todos los activos fijos de su organización.</p>
            <p>Con nuestra herramienta, puede:</p>
            <ul>
                <li>Registrar y catalogar todos sus activos fijos.</li>
                <li>Hacer un seguimiento del estado y ubicación de cada activo.</li>
                <li>Generar informes detallados para auditorías y análisis.</li>
            </ul>
            <p>Nuestro equipo está compuesto por expertos en tecnología y administración, dedicados a brindarle el mejor servicio y soporte técnico.</p>
        </section>
    </main>
    <footer>
        <p>&copy; 2025 Administración de Activos Fijos. Todos los derechos reservados.</p>
    </footer>

   <!-- Bootstrap JS (Opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

<div class="container text-center mt-5">
    <a asp-controller="Asset" asp-action="AddAsset" class="btn btn-danger mt-3">Agregar Activo</a>
    <a href="/Login/Index" class="btn btn-danger mt-3">Cerrar Sesión</a>
</div>
</html>