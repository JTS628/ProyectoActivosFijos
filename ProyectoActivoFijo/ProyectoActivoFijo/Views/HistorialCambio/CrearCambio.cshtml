@model ProyectoActivoFijo.Models.HistorialCambio

@{
    ViewData["Title"] = "Agregar Cambio";
}

<h1 class="text-center">Agregar Cambio</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="UsuarioEmail" class="control-label"></label>
        <input asp-for="UsuarioEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Accion" class="control-label"></label>
        <input asp-for="Accion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Detalles" class="control-label"></label>
        <input asp-for="Detalles" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
</form>

