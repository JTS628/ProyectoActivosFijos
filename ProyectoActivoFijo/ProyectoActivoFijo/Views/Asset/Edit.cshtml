@model ProyectoActivoFijo.Models.Asset

@{
    ViewData["Title"] = "Editando Activo";
}

<div class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="container bg-white p-5 rounded shadow-lg;"> 
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <form action="Update" method="POST">
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ID, new { @class = "" })
                            @Html.TextBoxFor(model => model.ID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre, new { @class = "" })
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                     <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Estado" class="control-label">Estado</label>
                            @Html.DropDownListFor(m => m.Estado,
                                     new SelectList(new[]
                                     {
                            new { Value = "1", Text = "Operativo" },
                            new { Value = "2", Text = "En Mantenimiento" },
                            new { Value = "3", Text = "Fuera de Servicio" }
                            }, "Value", "Text"),
                                     "Select Status", // Placeholder text
                                     new { @class = "form-control" }
                                     )
                        </div> 
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FechaAdquisicion, new { @class = "" })
                            <input class="form-control" id="FechaAdquisicion" name="FechaAdquisicion" type="datetime-local" value="@Model.FechaAdquisicion.ToString("yyyy-MM-ddTHH:mm")">
                            @Html.ValidationMessageFor(model => model.FechaAdquisicion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Descripcion, new { @class = "" })
                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <div class="row mt-2">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        @Html.ActionLink("Cancelar", "Index", new { code = "" }, new { @class = "btn btn-danger" })
                    </div>
                </div>

            </div> 
            
        </form> 
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


