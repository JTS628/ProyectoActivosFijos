@model ProyectoActivoFijo.Models.User

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - Control de Activos</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* Fondo azul con degradado */
        body {
            background: linear-gradient(135deg, #0056b3, #003366);
            height: 100vh;
            display: flex;
            flex-direction: column;
                }

        /* Contenedor del login */
        .login-container {
            max-width: 600px; /* Más ancho */
            min-height: 400px; /* Más alto */
            background: white;
            padding: 40px; /* Más espacio interno */
            border-radius: 15px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        }

        /* Inputs con iconos */
        .form-control {
            padding-left: 40px;
        }

        .input-group-text {
            background: #007bff;
            color: white;
            border: none;
        }

        /* Botón de login */
        .btn-primary {
            background-color: #007bff;
            border: none;
            transition: 0.3s;
        }

        .btn-primary:hover {
            background-color: #004c99;
        }

        /* Navbar estilizado */
        .navbar {
            background: #004c99;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .texto-blanco-negrita {
            color: white; /* Texto en blanco */
            font-weight: bold; /* Negrita */
        }
    </style>
</head>
<body>

    <div class="container text-center mt-5">
        <h1 class="display-4 texto-blanco-negrita">Control de Activos</h1>
    </div>
    <br />

    <!-- Contenedor del Login -->
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="login-container">
            <h2 class="text-center mb-4">Iniciar Sesión</h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form method="post" action="/Login/Authenticate">
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" name="Username" class="form-control" placeholder="Usuario" value="admin" required />
                </div><br />

                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="Password" class="form-control" placeholder="Contraseña" value="1234" required />
                </div><br />

                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

